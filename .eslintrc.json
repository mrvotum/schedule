{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "import/no-cycle": "off", 
        "no-restricted-globals": "off", 
        "class-methods-use-this": "off",
        "eol-last": "off",              
        "consistent-return": "off"        
    }
}